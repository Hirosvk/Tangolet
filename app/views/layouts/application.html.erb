<!DOCTYPE html>
<html>
<head>
  <title>Tangolet</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
  <% if current_user %>
    <script>
      window.currentUser = <%= render("api/users/user.json.jbuilder", user: current_user, details: false).html_safe %>
    </script>
  <% end %>
</head>
<body>
  <div id='root' />

<%= yield %>

</body>
</html>
